<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles.css">
</head>
<h1>@ViewData["Title"]</h1>
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<body class="homepagebg">
    <!-- Content for the special page -->
</body>

<section class="LearnMore">  <!-- Defines a class to allow for CSS modifications.-->
    <div class="content"> 
        <h1>Welcome to Abstrax Art</h1>
        <p>Explore the world of art and creativity</p> 
        <a class="button rounded" asp-area="" asp-controller="Home" asp-action="About">Learn More</a> 
    </div> 
</section>

<section class="container">
    <div class="slider-wrapper">
        <div class="slider">
            <img id="slide-1" src="/lib/images/Living Room 7.jpeg" alt="slide 1" /> <!-- Image files which are located in a www.root folder -->
            <img id="slide-2" src="/lib/images/Living Room 9.jpeg" alt="slide 2" /> <!-- Image files which are located in a www.root folder -->
            <img id="slide-3" src="/lib/images/Mockup 1.jpeg" alt="slide 3" /> <!-- Image files which are located in a www.root folder -->
        </div>
        <div class="sliderNav">
            <a href="#slide-1" data-slide="0"></a>
            <a href="#slide-2" data-slide="1"></a>
            <a href="#slide-3" data-slide="2"></a>
        </div>
        <div class="sliderNav">
            <a href="#slide-1"></a>
            <a href="#slide-2"></a>
            <a href="#slide-3"></a>

            <script>
                const slider = document.querySelector('.slider');
                const slides = document.querySelectorAll('.slider img');
                let currentSlide = 0; // Displayed slide

                function showNextSlide() {
                    currentSlide = (currentSlide + 1) % slides.length;
                    slider.scrollTo({
                        left: slides[currentSlide].offsetLeft,
                        behavior: 'smooth'
                    }); // This causes the carousel to smoothly switch between slides. When it reaches the end of the cycle, it cycles back to the beginning.
                }

                setInterval(showNextSlide, 3000); // Creates an interval which changes the slide/image every 3 seconds.
            </script> 
            <!-- This javascript code makes the carousel function by itself and automactially switch between slides.-->

        </div>
</section>

<!-- Three image links below the carousel on the home page. -->
